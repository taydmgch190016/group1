{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-success mb-2">Genre List</h2>
    <a class="btn btn-primary mb-3" href="{{ path('teacher_add')}}">ADD</a>
    <table class="table table-info">
        <tr>
            <th>Teacher Id</th>
            <th>Teacher name</th>
            <th>Teacher image</th>
            <th>Menu</th>
        </tr>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>
                    <a href="{{ path('teacher_detail' , {'id' : teacher.id })}}">
                        <img src="{{ teacher.image }}" width=100 height=100>
                    </a>     
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('teacher_edit', {'id': teacher.id })}}">EDIT</a>
                    <a class="btn btn-danger" href="{{ path('teacher_delete', {'id' : teacher.id })}}"
                    onclick="return confirm('Do you want to delete this teacher ?');"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}  
    </table>
</div>
{% endblock %}